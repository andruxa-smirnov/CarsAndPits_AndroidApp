<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.levabala.sensors_recorder.Activities.MainActivity" tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="startRecording"
        android:padding="40dp"
        android:text="Start" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="stopRecording"
        android:padding="40dp"
        android:text="Stop" />

    <TextView
        android:id="@+id/textViewAccelerationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMagneticFieldCount"
        android:layout_alignStart="@+id/textViewMagneticFieldCount"
        android:layout_below="@+id/textViewMagneticFieldCount"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewMagneticFieldCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewGravityCount"
        android:layout_alignStart="@+id/textViewGravityCount"
        android:layout_below="@+id/textViewGravityCount"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewGravityCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_below="@+id/textViewGyroscopeCount"
        android:layout_alignLeft="@+id/textViewGyroscopeCount"
        android:layout_alignStart="@+id/textViewGyroscopeCount" />

    <TextView
        android:id="@+id/textViewGPSCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textViewGyroscopeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_below="@+id/textViewGPSCount"
        android:layout_alignLeft="@+id/textViewGPSCount"
        android:layout_alignStart="@+id/textViewGPSCount" />

</RelativeLayout>
